FROM node:argon
MAINTAINER dicksonyue@gmail.com
ENV REDIS_PORT=6379
ENV REDIS_HOST=redis
# Create app directory
RUN mkdir -p /usr/src/app
WORKDIR /usr/src/app

# Install app dependencies
COPY package.json /usr/src/app/
RUN npm install

# Bundle app source
COPY . /usr/src/app

EXPOSE 8080
CMD [ "npm", "start" ]
